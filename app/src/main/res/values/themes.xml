<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sketches_and_Location" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="checkboxStyle">@style/CheckboxStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/brown</item>
        <item name="marginHorizontal">@dimen/margin_medium</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/brown</item>
        <item name="marginHorizontal">@dimen/margin_medium</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/brown</item>
    </style>

    <style name="ImageButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="backgroundTint">@color/brown</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- SquareFloatingActionButton -->
    <style name="SquareFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/purple_200</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/SquareShapeOverlay</item>
    </style>
    <!-- SquareShapeOverlay -->
    <style name="SquareShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>
</resources>